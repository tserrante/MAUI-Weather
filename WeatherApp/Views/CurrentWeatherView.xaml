<?xml version="1.0" encoding="utf-8" ?>
<VerticalStackLayout 
			 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:viewmodels="clr-namespace:WeatherApp.ViewModels"
             x:Class="WeatherApp.Views.CurrentWeatherView"
			 x:DataType="viewmodels:CurrentWeatherViewModel"
			 Margin="10"
	   		 Spacing="10" >
    
    <VerticalStackLayout.BindingContext>
        <viewmodels:CurrentWeatherViewModel/>
    </VerticalStackLayout.BindingContext>
        <Entry Placeholder="ZIP"
			   Text="{Binding ZipCode}"
			   MaxLength="5"
			   WidthRequest="200"
			   HeightRequest="20"
			   HorizontalOptions="Start"
			   VerticalOptions="Start"
			   ClearButtonVisibility="WhileEditing"	/>
        <Label x:Name="CityLabel" 
               FontSize="Small" 
               HorizontalOptions="Start" 
               TextColor="Gray" 
			   Text="{Binding CityName}" />
        <Label x:Name="WeatherDescriptionLabel"
			   FontSize="Small"
			   HorizontalOptions="Start"
			   TextColor="SlateGray"
			   Text="{Binding WeatherDescription}" />
		<Image Source="{Binding IconPath}"
			   Aspect="AspectFit"
               HorizontalOptions="Start"
               HeightRequest="150"
               WidthRequest="150"	/>
</VerticalStackLayout>
